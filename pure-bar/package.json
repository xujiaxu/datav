          "y1": 48
        },
        {
          "x": "趸售用电",
          "y1": 96
        },
        {
          "x": "其他用电",
          "y1": 54
        },
        {
          "x": "一般工商业及其他",
          "y1": 20
        },
        {
          "x": "打水用电",
          "y1": 11
        }
      ]
    }
  }
}
