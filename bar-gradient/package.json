{
  "name": "@GW.DDJJCS/bar-gradient",
  "version": "0.0.3",
  "dependencies": {
    "bcore": "0.0.18",
    "echarts": "^4.6.0",
    "jquery": "2.1.4",
    "lodash": "4.6.1"
  },
  "datav": {
    "cn_name": "bar-gradient",
    "icon": "",
    "protocol": 2,
    "type": [
      "regular"
    ],
    "view": {
      "width": "400",
      "height": "200",
      "minWidth": "200",
      "minHeight": "100"
    },
    "apis": {
      "source": {
        "handler": "render",
        "description": "接口描述",
        "fields": {
          "value": {
            "description": "值说明"
          }
        }
      }
    },
    "config": {
      "grid": {
        "name": "图表间距",
        "type": "group",
        "fold": true,
        "children": {
          "top": {
            "name": "顶部",
            "type": "text",
            "default": "15%"
          },
          "right": {
            "name": "右侧",
            "type": "text",
            "default": "5%"
          },
          "bottom": {
            "name": "底部",
            "type": "text",
            "default": "5%"
          },
          "left": {
            "name": "左侧",
            "type": "text",
            "default": "5%"
          }
        }
      },
      "legend": {
        "name": "图例",
        "type": "group",
        "children": {
          "textStyle": {
            "name": "文本样式",
            "type": "group",
            "children": {
              "fontSize": {
                "name": "字号",
                "type": "number",
                "default": 18
              },
              "color": {
                "name": "颜色",
                "type": "color",
                "default": "#fff"
              }
            }
          },
          "right": {
            "name": "右边距",
            "type": "text",
            "default": "14%"
          }
        },
        "fold": true
      }
    },
    "api_data": {
      "source": [
        {
          "value": "值"
        }
      ]
    }
  }
}
